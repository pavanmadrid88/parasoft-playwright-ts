pipeline {
    agent any

    tools {
        nodejs 'NodeJS 18' // Matches name in Global Tool Config
    }

    stages {
        stage('Install') {
            steps {
                sh 'npm ci'
                sh 'npx playwright install'
            }
        }

        stage('Test') {
            steps {
                sh 'npx playwright test'
            }
        }
    }
}
