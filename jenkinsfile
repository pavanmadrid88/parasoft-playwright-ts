pipeline {
    agent any

    tools {nodejs "node"}


    stages {
        stage('Install') {
            
            steps {
                
                    sh 'npm install'
                    sh 'npm ci'
                    sh 'npx playwright install'
                          
            }
        }

        stage('Test') {
            steps {
                sh 'npx playwright test --project=chromium --reporter=html'
            }
        }

        stage('Archive Report') {
            steps {
                archiveArtifacts artifacts: '**/playwright-report/**', fingerprint: true
            }
        }
    }

    post {
        success {
            echo '✅ Tests passed'
        }
        failure {
            echo '❌ Test run failed'
        }
    }
}
